.img-fit
	height 100%
	width 100%
	object-fit cover
	
.overflow
	overflow hidden

.pointer
	cursor pointer
	
.menu-x
	font-size 0
	.menu-child
		font-size initial
		display inline-block
		a, span
			display block
		a
			cursor pointer
			
.menu-y
