@css {
	@import url(https://fonts.googleapis.com/css?family=Droid+Serif:400,700);
}
@import "ambient-stylus/init"

.paper
	background white
	border-left 1px solid
	border-color #ececec

.quote
	font-size 28px
	padding 25px
	@extend .paper
	line-height 1.3
	
.quote + .quote
	margin-top 24px
	
.quotes
	size 100%
	display table
	padding 30px
	bg linear-gradient(to right, #f1f1f1 0%, #f5f5f5 100%)
	
body
	font-family "Droid Serif"